{
  "name": "personal-homepage-2025",
  "version": "1.0.0",
  "private": true,
  "description": "monorepo personal homepage 2025 project built as a monorepo with pnpm",
  "scripts": {
    "commit": "cz",
    "release": "commit-and-tag-version",
    "prepare": "husky",
    "db:prepare": "concurrently \"pnpm --filter backend db:prepare\"",
    "install": "cd apps/backend && pnpm install",
    "lint": "concurrently \"pnpm --filter backend lint\"",
    "format": "concurrently \"pnpm --filter backend format\"",
    "check:circular": "concurrently \"pnpm --filter backend check:circular\"",
    "test": "concurrently \"pnpm --filter backend test\"",
    "dev": "concurrently \"pnpm --filter backend start:dev\"",
    "build": "concurrently \"pnpm --filter backend build\""
  },
  "keywords": [],
  "author": "Micha≈Ç Cesarczyk",
  "license": "MIT",
  "packageManager": "pnpm@10.12.1",
  "devDependencies": {
    "concurrently": "^9.2.0",
    "commit-and-tag-version": "^12.5.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^9.0.11",
    "madge": "^6.1.0",
    "prettier": "^3.0.0",
    "pretty-quick": "^4.0.0",
    "source-map-support": "^0.5.21"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
