{
  "name": "personal-homepage-2025",
  "version": "1.0.0",
  "private": true,
  "description": "monorepo personal homepage 2025 project built as a monorepo with pnpm",
  "scripts": {
    "commit": "cz",
    "release": "standard-version",
    "prepare": "husky",
    "db:prepare": "concurrently \"pnpm --filter backend db:prepare\"",
    "install": "cd apps/backend && pnpm install",
    "dev": "concurrently \"pnpm --filter backend start:dev\""
  },
  "keywords": [],
  "author": "Micha≈Ç Cesarczyk",
  "license": "MIT",
  "packageManager": "pnpm@10.12.1",
  "dependencies": {
    "husky": "^9.0.11",
    "madge": "^6.1.0",
    "prettier": "^3.0.0",
    "pretty-quick": "^4.0.0",
    "source-map-support": "^0.5.21",
    "standard-version": "^9.5.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "concurrently": "^9.2.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
