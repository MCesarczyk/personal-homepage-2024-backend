{
  "name": "personal-homepage-2025",
  "version": "1.1.0",
  "private": true,
  "description": "monorepo personal homepage 2025 project built as a monorepo with pnpm",
  "scripts": {
    "commit": "cz",
    "release": "commit-and-tag-version",
    "prepare": "husky",
    "db:prepare": "concurrently -c \"red\" \"pnpm --filter backend db:prepare\"",
    "install": "cd apps/backend && pnpm install && cd ../admin && pnpm install",
    "lint": "concurrently -c \"red,green\" \"pnpm --filter backend lint\" \"pnpm --filter admin lint\"",
    "format": "prettier --write \"apps/**/src/**/*.ts\" \"apps/**/test/**/*.ts\"",
    "check:circular": "madge --circular --extensions ts,tsx ./apps",
    "test": "concurrently -c \"red,green\" \"pnpm --filter backend test\"",
    "dev": "concurrently -c \"red,green\" \"pnpm --filter backend start:dev\" \"pnpm --filter admin dev\"",
    "build": "concurrently -c \"red,green\" \"pnpm --filter backend build\" \"pnpm --filter admin build\""
  },
  "keywords": [],
  "author": "Micha≈Ç Cesarczyk",
  "license": "MIT",
  "packageManager": "pnpm@10.12.1",
  "devDependencies": {
    "concurrently": "^9.2.0",
    "commit-and-tag-version": "^12.5.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.0.11",
    "madge": "^6.1.0",
    "prettier": "^3.0.0",
    "pretty-quick": "^4.0.0",
    "source-map-support": "^0.5.21"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
