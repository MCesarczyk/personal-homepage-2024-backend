generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(uuid())
  email        String    @unique
  name         String
  password     String
  occupation   String
  introduction String
  skills       Skill[]
  projects     Project[]
  refreshToken String?
}

enum SkillState {
  PLANNED
  RUNNING
  COMPLETED
}

model Skill {
  id      String     @id @default(uuid())
  content String
  state   SkillState
  user    User       @relation(fields: [userId], references: [id])
  userId  String
}

model Project {
  id          String         @id @default(uuid())
  title       String
  description String
  codeUrl     String
  demoUrl     String
  user        User           @relation(fields: [userId], references: [id])
  userId      String
  images      ProjectImage[]
}

model ProjectImage {
  id        String  @id @default(uuid())
  url       String
  project   Project @relation(fields: [projectId], references: [id])
  projectId String
}
